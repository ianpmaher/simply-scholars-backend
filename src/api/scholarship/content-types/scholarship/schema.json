  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "default": "scholarshipName"
    },
    "description": {
      "type": "richtext",
      "minLength": 1,
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "deadline": {
      "type": "date",
      "required": true
    },
    "value": {
      "type": "integer"
    },
    "pic": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "pdf": {
      "allowedTypes": [
        "files"
      ],
      "type": "media",
      "multiple": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "eligibility": {
      "type": "enumeration",
      "enum": [
        "Merit-Based",
        "Needs-Based",
        "Merit- & Needs-Based",
        "Other"
      ]
    }
